#!/bin/sh

test -n "$*" && scrsaver="$*" || scrsaver=genact

exec cool-retro-term -T '__XSCRSAVER_FEELDEAD__' --fullscreen -e sh -c " \
  stty -echo; \
  while not wmctrl -r __XSCRSAVER_FEELDEAD__ -b add,above; do true; done; \
  clear; \
  unclutter --start-hidden & xscrsaver-wrapper ${scrsaver}; \
  exit 0; \
"
